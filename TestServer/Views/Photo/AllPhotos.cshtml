@model IEnumerable<TestServer.Models.Photo>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Allphotos</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Face.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsTheBest)
            </th>
	        <th>
		        @Html.DisplayNameFor(model => model.Owner.ShortName)
	        </th>
			<th>
				@Html.DisplayNameFor(model => model.Face.Image)
			</th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Face.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsTheBest)
            </td>
	        <td>
		        @Html.DisplayFor(modelItem => item.Owner.ShortName)
	        </td>
			<td>
				@{
				var base64 = Convert.ToBase64String(item.Face.Image);
				var imgSrc = String.Format("data:image/jpg;base64,{0}", base64);
				}
				<img src="@imgSrc" />
			</td>

	        <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
